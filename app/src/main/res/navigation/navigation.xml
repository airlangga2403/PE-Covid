<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/landingPage_1">

    <fragment
        android:id="@+id/landingPage_1"
        android:name="org.d3if2024.pecovid.ui.landing_page.LandingPage_1"
        android:label="Landing Page"
        tools:layout="@layout/fragment_landing_page_1">
        <action
            android:id="@+id/action_landingPage_1_to_landingPage_2"
            app:destination="@id/landingPage_2" />
    </fragment>
    <fragment
        android:id="@+id/landingPage_2"
        android:name="org.d3if2024.pecovid.ui.landing_page.LandingPage_2"
        android:label="Landing Page"
        tools:layout="@layout/fragment_landing_page_2">
        <action
            android:id="@+id/action_landingPage_2_to_landingPage_3"
            app:destination="@id/landingPage_3" />
    </fragment>
    <fragment
        android:id="@+id/landingPage_3"
        android:name="org.d3if2024.pecovid.ui.landing_page.LandingPage_3"
        android:label="Landing Page"
        tools:layout="@layout/fragment_landing_page_3">
        <action
            android:id="@+id/action_landingPage_3_to_loginActivity"
            app:destination="@id/loginActivity" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="org.d3if2024.pecovid.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_userCenterFragment"
            app:destination="@id/userCenterFragment" />
        <action
            android:id="@+id/action_homeFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="org.d3if2024.pecovid.ui.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings">
        <action
            android:id="@+id/action_settingsFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_settingsFragment_to_userCenterFragment"
            app:destination="@id/userCenterFragment" />
    </fragment>
    <fragment
        android:id="@+id/userCenterFragment"
        android:name="org.d3if2024.pecovid.ui.usercenter.UserCenterFragment"
        android:label="User Center"
        tools:layout="@layout/fragment_user_center">
        <action
            android:id="@+id/action_userCenterFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_userCenterFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginActivity"
        android:name="org.d3if2024.pecovid.ui.login.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginActivity_to_homeFragment"
            app:destination="@id/homeFragment"
            app:launchSingleTop="true"
            app:popUpTo="@+id/landingPage_3"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_loginActivity_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_loginActivity_to_resetPassword"
            app:destination="@id/resetPassword" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="org.d3if2024.pecovid.ui.signup.SignUpFragment"
        android:label="Sign-Up"
        tools:layout="@layout/fragment_sign_up">
        <action
            android:id="@+id/action_signUpFragment_to_loginActivity"
            app:destination="@id/loginActivity" />
    </fragment>
    <fragment
        android:id="@+id/resetPassword"
        android:name="org.d3if2024.pecovid.ui.reset.ResetPassword"
        android:label="Reset Password"
        tools:layout="@layout/fragment_reset_password">
        <action
            android:id="@+id/action_resetPassword_to_loginActivity"
            app:destination="@id/loginActivity" />
    </fragment>
</navigation>